-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, id: "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, checked_value(rating), id: "ratings_#{rating}"
  = submit_tag 'Refresh', id: "ratings_submit"

%table#movies
  %thead
    %tr
      %th{ class: table_head_class("title") }
        %a#title_header{ href: movies_path({ order: :title, ratings: rating_hash(@ratings) })} Movie Title
      %th Rating
      %th{ class: table_head_class("release_date") }
        %a#release_date_header{ href: movies_path({ order: :release_date, ratings: rating_hash(@ratings) })} Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
